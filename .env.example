# ========================================
# 币安公告转发系统环境配置模板
# 复制此文件为 .env 并填入实际值
# ========================================

# ========================================
# 币安API配置 (必需)
# ========================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ========================================
# Telegram通知 (可选)
# ========================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ========================================
# ShowDoc推送 (可选)
# ========================================
SHOWDOC_ENABLED=false
# JSON格式配置多个接收者: {"接收者名称":"推送URL"}
SHOWDOC_RECIPIENTS={"用户A":"https://push.showdoc.com.cn/server/api/push/token1","用户B":"https://push.showdoc.com.cn/server/api/push/token2"}
# 最大并发推送数量，防止过载
SHOWDOC_MAX_CONCURRENT=3

# ========================================
# 系统配置
# ========================================
NODE_ENV=production
PORT=5010
LOG_LEVEL=info

# ========================================
# 消息过滤配置 (可选)
# ========================================
# 启用的分类ID或名称（逗号分隔），不设置则不过滤
FILTER_CATEGORIES=

# 启用的关键词（逗号分隔），不设置则不过滤
FILTER_KEYWORDS=

# 排除的关键词（逗号分隔）
EXCLUDE_KEYWORDS=

# ========================================
# AI翻译配置 (可选)
# ========================================
# 启用AI翻译功能
AI_TRANSLATION_ENABLED=false

# API提供商类型: anthropic | custom-anthropic | openai-compatible
AI_PROVIDER=openai-compatible

# Anthropic API密钥 (直接使用Anthropic API时)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 第三方API配置 (当AI_PROVIDER=custom-anthropic或openai-compatible时使用)
AI_BASE_URL=https://your-api-endpoint.com/v1
AI_API_KEY=your_ai_api_key
AI_CUSTOM_HEADERS={}

# AI模型选择
AI_MODEL=your_ai_model

# 翻译模式: both(原文+译文), translated(仅译文), original(仅原文)
AI_TRANSLATION_MODE=both

# AI请求超时时间（毫秒）
AI_TIMEOUT=15000

# AI请求重试次数
AI_RETRY_ATTEMPTS=2

# AI请求最大令牌数
AI_MAX_TOKENS=1000

# ========================================
# 监控配置 (可选)
# ========================================
MONITORING_ENABLED=false
METRICS_PORT=9090
ALERT_WEBHOOK=